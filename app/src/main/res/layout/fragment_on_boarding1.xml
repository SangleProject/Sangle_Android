<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_blue"
    tools:context=".login.ui.OnBoardingFragment1"
    tools:ignore="ContentDescription">

    <TextView
        android:id="@+id/on_boarding_title_1"
        style="@style/H1_24pt_Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:gravity="center"
        android:text="@string/on_boarding_title_1"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/on_boarding_info_1"
        style="@style/P3_14pt_Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/on_boarding_info_1"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/on_boarding_title_1" />


    <ImageView
        android:id="@+id/on_boarding_dot_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="4dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/circle_light_mint"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toStartOf="@+id/on_boarding_dot_2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/on_boarding_info_1"
        app:layout_constraintWidth_percent="0.02"
        app:tint="@color/white" />

    <ImageView
        android:id="@+id/on_boarding_dot_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="4dp"
        android:scaleType="fitXY"
        android:src="@drawable/circle_stroke_white"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toStartOf="@+id/on_boarding_dot_3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/on_boarding_dot_1"
        app:layout_constraintTop_toTopOf="@id/on_boarding_dot_1"
        app:layout_constraintWidth_percent="0.02" />

    <ImageView
        android:id="@+id/on_boarding_dot_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="4dp"
        android:scaleType="fitXY"
        android:src="@drawable/circle_stroke_white"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toStartOf="@+id/on_boarding_dot_4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/on_boarding_dot_2"
        app:layout_constraintTop_toTopOf="@id/on_boarding_dot_2"
        app:layout_constraintWidth_percent="0.02" />

    <ImageView
        android:id="@+id/on_boarding_dot_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="4dp"
        android:scaleType="fitXY"
        android:src="@drawable/circle_stroke_white"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toStartOf="@+id/on_boarding_dot_5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/on_boarding_dot_3"
        app:layout_constraintTop_toTopOf="@id/on_boarding_dot_3"
        app:layout_constraintWidth_percent="0.02" />

    <ImageView
        android:id="@+id/on_boarding_dot_5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="4dp"
        android:scaleType="fitXY"
        android:src="@drawable/circle_stroke_white"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/on_boarding_dot_4"
        app:layout_constraintTop_toTopOf="@id/on_boarding_dot_4"
        app:layout_constraintWidth_percent="0.02" />

    <ImageView
        android:id="@+id/on_boarding_img_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/img_onboarding0"
        android:scaleType="fitXY"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/on_boarding_dot_1" />

</androidx.constraintlayout.widget.ConstraintLayout>