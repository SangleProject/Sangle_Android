<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="org.three.minutes.profile.viewmodel.ProfileViewModel" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".profile.ui.ProfileChangeActivity"
        tools:ignore="HardcodedText">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentInsetStart="0dp">

                <ImageView
                    android:id="@+id/profile_menu_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_menu_hamburg"
                    tools:ignore="ContentDescription" />

                <TextView
                    style="@style/H3_18pt_SemiBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="프로필 변경"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/profile_changed_txt"
                    style="@style/H4_18pt_Light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:padding="16dp"
                    android:text="저장"
                    android:textColor="@color/white" />

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <HorizontalScrollView
            android:id="@+id/profile_select_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appBarLayout">

            <RadioGroup
                android:id="@+id/profile_img_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/appBarLayout">

                <RadioButton
                    android:id="@+id/profile1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/state_profile1"
                    android:checked="false"
                    android:button="@null" />

                <RadioButton
                    android:id="@+id/profile2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="6dp"
                    android:background="@drawable/state_profile2"
                    android:button="@null" />

                <RadioButton
                    android:id="@+id/profile3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="6dp"
                    android:background="@drawable/state_profile3"
                    android:button="@null" />

                <RadioButton
                    android:id="@+id/profile4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="6dp"
                    android:background="@drawable/state_profile4"
                    android:button="@null" />

                <RadioButton
                    android:id="@+id/profile5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="6dp"
                    android:background="@drawable/state_profile5"
                    android:button="@null" />

                <RadioButton
                    android:id="@+id/profile6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="6dp"
                    android:background="@drawable/state_profile6"
                    android:button="@null" />

                <RadioButton
                    android:id="@+id/profile7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="6dp"
                    android:background="@drawable/state_profile7"
                    android:button="@null" />

                <RadioButton
                    android:id="@+id/profile8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/state_profile8"
                    android:button="@null" />


            </RadioGroup>

        </HorizontalScrollView>


        <EditText
            android:id="@+id/profile_nickname_edt"
            style="@style/H4_18pt_Light"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="9dp"
            android:layout_marginTop="48dp"
            android:backgroundTint="@color/black_20"
            android:ems="10"
            android:hint="변경할 닉네임을 입력해 주세요. (최대 10자)"
            android:importantForAutofill="no"
            android:inputType="text"
            android:lines="1"
            android:maxLength="10"
            android:paddingBottom="26dp"
            android:textColor="@color/black_60"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_select_scroll" />

        <EditText
            android:id="@+id/profile_introduce_edt"
            style="@style/H4_18pt_Light"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:backgroundTint="@color/black_20"
            android:ellipsize="none"
            android:ems="10"
            android:hint="한줄 소개를 입력해 주세요."
            android:importantForAutofill="no"
            android:inputType="text"
            android:maxLength="30"
            android:paddingBottom="26dp"
            android:singleLine="true"
            android:text="@={viewModel.introduce}"
            android:textColor="@color/black_60"
            app:layout_constraintEnd_toEndOf="@+id/profile_nickname_edt"
            app:layout_constraintStart_toStartOf="@+id/profile_nickname_edt"
            app:layout_constraintTop_toBottomOf="@+id/profile_nickname_edt" />

        <TextView
            android:id="@+id/num"
            style="@style/P3_14pt_Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="6dp"
            android:text="/30자"
            android:textColor="@color/black_40"
            app:layout_constraintEnd_toEndOf="@+id/profile_introduce_edt"
            app:layout_constraintTop_toBottomOf="@+id/profile_introduce_edt" />

        <TextView
            android:id="@+id/intro_count_txt"
            style="@style/P3_14pt_Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{Integer.toString(viewModel.introduceCount)}"
            android:textColor="@color/black_40"
            app:layout_constraintBottom_toBottomOf="@+id/num"
            app:layout_constraintEnd_toStartOf="@+id/num"
            app:layout_constraintTop_toTopOf="@+id/num" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>