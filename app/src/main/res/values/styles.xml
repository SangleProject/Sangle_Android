<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/main_blue</item>
        <item name="colorPrimaryDark">@color/main_blue</item>
        <item name="colorAccent">@color/main_blue</item>
    </style>

    <style name="baseFontSetting">
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/notosans</item>
    </style>

    <style name="H1_H2_24pt" parent="baseFontSetting">
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">12sp</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="P1_P2_16pt" parent="baseFontSetting">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>
    
    <style name="P3_P4_14pt" parent="baseFontSetting">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">7sp</item>
        <item name="android:letterSpacing">-0.03</item>
    </style>

</resources>