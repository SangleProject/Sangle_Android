<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/main_blue</item>
        <item name="colorPrimaryDark">@color/main_blue</item>
        <item name="colorAccent">@color/main_blue</item>
    </style>

    <style name="baseFontSetting">
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="H1_24pt_Regular" parent="baseFontSetting">
        <item name="fontFamily">@font/notosanskr_regular</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">12sp</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="H2_24pt_Light" parent="baseFontSetting">
        <item name="fontFamily">@font/notosanskr_light</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">12sp</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>
    
    <style name="H3_18pt_SemiBold" parent="baseFontSetting">
        <item name="fontFamily">@font/notosanskr_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">6dp</item>
        <item name="android:letterSpacing">-0.03</item>
    </style>

    <style name="H4_18pt_Light" parent="baseFontSetting">
        <item name="fontFamily">@font/notosanskr_light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">6dp</item>
        <item name="android:letterSpacing">-0.03</item>
    </style>

    <style name="P1_16pt_SemiBold" parent="baseFontSetting">
        <item name="fontFamily">@font/notosanskr_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>
    <style name="P1_16pt_Regular" parent="baseFontSetting">
        <item name="fontFamily">@font/notosanskr_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="P2_16pt_Light" parent="baseFontSetting">
        <item name="fontFamily">@font/notosanskr_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>
    
    <style name="P3_14pt_Regular" parent="baseFontSetting">
        <item name="fontFamily">@font/notosanskr_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">7sp</item>
        <item name="android:letterSpacing">-0.03</item>
    </style>

    <style name="P4_14pt_Light" parent="baseFontSetting">
        <item name="fontFamily">@font/notosanskr_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">7sp</item>
        <item name="android:letterSpacing">-0.03</item>
    </style>

    <style name="P5_12pt_Bold" parent="baseFontSetting">
        <item name="fontFamily">@font/notosanskr_bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="P6_12pt_Regular" parent="baseFontSetting">
        <item name="fontFamily">@font/notosanskr_regular</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="CustomEdit" parent="H4_18pt_Light">
        <item name="android:backgroundTint">@color/black_20</item>
        <item name="android:textColor">@color/black_100</item>
        <item name="android:lines">1</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

</resources>