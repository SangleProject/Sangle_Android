<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.three.minutes">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".writing.ui.WritingResultActivity"
            android:exported="true"/>
        <activity
            android:name=".writing.ui.WritingActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".writing.ui.WritingReadyActivity"
            android:exported="true" />
        <activity
            android:name=".login.ui.MainActivity"
            android:exported="true" />
        <activity
            android:name=".home.ui.HomeActiviy"
            android:exported="true" />
        <activity
            android:name=".signup.ui.ClausActivity"
            android:exported="true" />
        <activity
            android:name=".signup.ui.SignupActivity"
            android:exported="true"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".login.ui.SplashActivity"
            android:windowSoftInputMode="stateHidden|adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>